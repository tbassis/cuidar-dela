<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/text_pathology"
                    style="@style/SectionHeader"
                    android:layout_marginTop="8sp"
                    android:text="@string/pathology"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/text_pathology_p1"
                    style="@style/SectionBody"
                    android:layout_below="@+id/text_pathology"
                    android:text="@string/text_pathology_p1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/text_pathology_p2"
                    style="@style/SectionBody"
                    android:layout_below="@+id/text_pathology_p1"
                    android:text="@string/text_pathology_p2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/text_pathology_p3"
                    style="@style/SectionBody"
                    android:layout_below="@+id/text_pathology_p2"
                    android:text="@string/text_pathology_p3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/text_pathology_p4"
                    style="@style/SectionBody"
                    android:layout_below="@+id/text_pathology_p3"
                    android:text="@string/text_pathology_p4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/text_pathology_p5"
                    style="@style/SectionBody"
                    android:layout_below="@+id/text_pathology_p4"
                    android:text="@string/text_pathology_p5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>